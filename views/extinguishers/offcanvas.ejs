<div class="offcanvas offcanvas-start" tabindex="-1" data-bs-scroll="true" data-bs-backdrop="true" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
  <div class="offcanvas-header">
    <span id="extinguisher-header">
      <h5 class="offcanvas-title" id="extinguisher-id" style="display:inline;">#소화기</h5>
    </span>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <form id="update-form" >
      <div class="card" style="width: 18rem;">
        <img src="/test.jpg" id="image" class="card-img-top" >
        <div class="card-body">
          <input class="card-text form-control" id="desc" name="desc" disabled></input>
        </div>
      </div>
    <hr>
    <div class="input-group mb-3">
      <span class="input-group-text" id="basic-addon1">제조자</span>
      <input type="text" class="form-control" placeholder="제조자명" aria-label="manufacturer" aria-describedby="basic-addon1" id="manufacturer" name="manufacturer" disabled>
    </div>

    <div class="input-group mb-3">
      <span class="input-group-text" id="basic-addon1">제품명</span>
      <input type="text" class="form-control" placeholder="소화기명" aria-label="extinguisher" aria-describedby="basic-addon2" id="name" name="name" required disabled>
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text">제조일</span>
      <span class="input-group-text" id="date" ></span>
      <input type="date"  class="form-control" aria-label="date" name="date" required disabled>
    </div>
    <div class="input-group">
      <span class="input-group-text">위도</span>
      <input type="text" class="form-control" id="latitude" aria-label="latitude" name="latitude" required disabled ></input>
      <span class="input-group-text">경도</span>
      <input type="text" class="form-control" id="longitude" aria-label="longitude" name="longitude" required disabled ></input>
    </div>
    <hr>
    <h5>습도</h5>
    <hr>
    <div class="progress">
      <div class="progress-bar progress-bar-striped" id="humidity" role="progressbar" style="width: 50%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <hr>
    <h5>온도</h5>
    <div class="progress">
      <div class="progress-bar progress-bar-striped bg-danger" id="temp" role="progressbar" style="width: 25%" aria-valuenow="20" aria-valuemin="-30" aria-valuemax="60"></div>
    </div>
    <hr>
    <h5>압력</h5>
    <div class="progress">
      <div class="progress-bar progress-bar-striped bg-info" id="press" role="progressbar" aria-label="Info striped example" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <hr>
    <button type="button" class="btn btn-primary" id="modify">수정하기</button>
    <button type="button" class="btn btn-danger" id="delete">삭제하기</button>
    </form>
  </div>
</div>

<!-- offcanvas사용하기위해서는 bootstrap 5버전이상필요 -->