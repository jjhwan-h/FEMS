<%- include('../partials/header') %>
<div class="row" style="height: 100vh;">
    <div class="col-lg-3">
        <h2>소화기 등록</h2>
        <form action="/extinguishers" method="post" enctype="multipart/form-data">
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">제조자</span>
                <input type="text" class="form-control" placeholder="제조자명" aria-label="manufacturer" aria-describedby="basic-addon1" name="manufacturer">
            </div>
          
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">소화기</span>
                <input type="text" class="form-control" placeholder="소화기명" aria-label="extinguisher" aria-describedby="basic-addon2" name="name" required>
            </div>
    
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">현재상태</span>
              <select class="form-select" aria-label="state" name="state" required>
                <option disabled>상태를 선택하세요.</option>
                <option value="안전">안전</option>
                <option value="점검필요">점검필요</option>
              </select>
            </div>
    
            <div class="input-group">
              <span class="input-group-text">설명</span>
              <textarea class="form-control" aria-label="desc" name="desc"></textarea>
            </div>
            <br>
            <div class="input-group mb-3">
              <span class="input-group-text">제조일</span>
              <input type="date"  aria-label="date" name="date" required>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text">위도</span>
                <input type="text" class="form-control" id="latitude" aria-label="latitude" name="latitude" readonly>
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text">경도</span>
                <input type="text" class="form-control" id="longitude" aria-label="longitude" name="longitude" readonly>
            </div>
            <div class="mb-3 image">
              <label for="formFile" class="form-label">소화기 사진</label>
              <input class="form-control" type="file"  id="img" name="img">
            </div>
            
            <button class="btn btn-primary btn-subject" id="submit">Submit</button>
        </form>
    </div>
    <div class="col-lg-9" style="height: 100%;">
        <div class="map_wrap" style="height:100%;">
            <div id="map" style="width:100%;height:100%;position:relative;overflow:hidden;"></div>
        
            <div id="menu_wrap" class="bg_white">
                <div class="option">
                    <div>
                        <form onsubmit="searchPlaces(); return false;">
                            키워드 : <input type="text" id="keyword" size="15"> 
                            <button type="submit">검색하기</button> 
                        </form>
                    </div>
                </div>
                <hr>
                <ul id="placesList"></ul>
                <div id="pagination"></div>
            </div>
        </div>
    </div>
</div>

<script src="/scripts/registration.js"></script>
<%- include('../partials/footer') %>